		{ "value": "On", "description": "Arroser 30mn", "icon": "plant_hum.png", "http_url": "http://localhost/script/?exec=ospi.php&ip=[VAR1]&API=[VAR2]&zone_number=[VAR3]", "http_type": "GET",  "http_params": "&action=start&duration=30" }
		]
